const int red = 2;
const int yel = 3;
const int grn = 4;
const int wht = 5;
const int buz = 6;
const int trig = 7;
const int echo = 8;
int sure;
int mesafe;
void setup() {
  pinMode(red,OUTPUT);
  pinMode(yel,OUTPUT);
  pinMode(grn,OUTPUT);
  pinMode(wht,OUTPUT);
  pinMode(buz,OUTPUT);
  pinMode(trig,OUTPUT);
  pinMode(echo,INPUT);
}

void loop() {
  digitalWrite(trig,HIGH);
  delayMicroseconds(1000);
  digitalWrite(trig,LOW);
  sure = pulseIn(echo,HIGH);
  mesafe = (sure/2) / 28.5 ;

  if ( mesafe <=25 ) {
    digitalWrite(red,HIGH);
    digitalWrite(buz,HIGH);
    delay(250);
    digitalWrite(red,LOW);
    digitalWrite(buz,LOW);
  }

  else if ( mesafe <= 50 ) {
    digitalWrite(yel,HIGH);
    digitalWrite(buz,HIGH);
    delay(500);
    digitalWrite(yel,LOW);
    digitalWrite(buz,LOW);
  }
  else if  ( mesafe <= 75 ) {
    digitalWrite(grn,HIGH);
    digitalWrite(buz,HIGH);
    delay(750);
    digitalWrite(grn,LOW);
    digitalWrite(buz,LOW);
  }
  else {
    digitalWrite(wht,HIGH);
    delay(2500);
    digitalWrite(wht,LOW);
  }
}
